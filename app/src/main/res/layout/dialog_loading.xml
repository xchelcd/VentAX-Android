<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_gravity="top|center"
        android:layout_marginBottom="120dp"
        android:foreground="@drawable/style_loading_dialog"
        app:cardBackgroundColor="@color/blueColorVentax"
        app:cardCornerRadius="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="@drawable/style_loading_dialog" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="@drawable/style_loading_dialog_2"
        android:layout_gravity="center"
        android:minWidth="200dp"
        android:minHeight="120dp"
        android:paddingStart="25dp"
        android:paddingTop="20dp"
        android:paddingEnd="25dp"
        android:paddingBottom="20dp"
        app:cardBackgroundColor="@color/blueColorVentax"
        app:cardCornerRadius="10dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|center"
            android:gravity="center"
            android:orientation="vertical">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginBottom="10dp"
                android:indeterminate="false"
                android:indeterminateBehavior="cycle" />

            <TextView
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:id="@+id/textProgressBarTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="italic" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <View
        android:layout_gravity="center"
        android:layout_width="140dp"
        android:layout_height="5dp"
        android:elevation="1000dp"
        android:layout_marginBottom="60dp"
        android:background="@color/blueColorVentax"/>

</FrameLayout>
