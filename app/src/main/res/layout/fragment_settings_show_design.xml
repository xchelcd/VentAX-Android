<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="50dp"
    app:cardCornerRadius="5dp">
    <LinearLayout
        android:id="@+id/backgroundMainViewLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vista previa en tiempo real ↓"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:fontFamily="monospace"
            android:padding="10dp"
            android:textSize="20sp" />

        <!-- recycler view items -->
        <androidx.cardview.widget.CardView
            android:id="@+id/mainCardViewCardView"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <LinearLayout
                android:id="@+id/mainCardViewLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="1dp"
                    android:layout_weight="2.5"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp">

                        <ImageView
                            android:id="@+id/productCardViewImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#737BA5"
                            android:foreground="@drawable/idax" />

                    </androidx.cardview.widget.CardView>

                </FrameLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|center"
                            android:layout_marginTop="2dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/titleCardViewTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|center"
                                android:layout_marginTop="2dp"
                                android:text="Nombre del producto"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/priceCardViewTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|center"
                                android:layout_marginTop="2dp"
                                android:text="$99.99"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="17sp"
                                android:textStyle="italic|bold" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/descriptionCardViewTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Descripción\n(1-5 palabras)"
                            android:textAlignment="center" />
                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:background="@color/whiteColorInformation" />

        <!-- dialog details -->
        <androidx.cardview.widget.CardView
            android:id="@+id/mainDialogCardView"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/mainDialogLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/productOneDialogImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#737BA5"
                            android:foreground="@drawable/idax" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/productTwoDialogImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#737BA5"
                            android:foreground="@drawable/idax" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/productThreeDialogImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#737BA5"
                            android:foreground="@drawable/idax" />

                    </androidx.cardview.widget.CardView>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/prodcutTitleDialogTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|center"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="10dp"
                                android:text="Nombre del producto"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="25sp" />

                            <TextView
                                android:id="@+id/priceDialogTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="$99.99 MXN c/u" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="30dp">

                            <TextView
                                android:id="@+id/idDialogTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="5dp"
                                android:paddingBottom="4dp"
                                android:text="ID: " />

                            <TextView
                                android:id="@+id/detailsDialogTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:text="Detalles del producto\n(0/200 caracteres)"
                                android:textAlignment="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/cancelDialogButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Cancelar" />

                            <Button
                                android:id="@+id/orderDialogButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Ordenar" />

                        </LinearLayout>

                    </FrameLayout>

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>
