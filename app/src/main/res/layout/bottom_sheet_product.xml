<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="@drawable/style_bottom_sheet_company"
    android:id="@+id/bottom_sheet_p"
    android:minHeight="500dp">


        <LinearLayout
            android:id="@+id/mainDetailsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/oneDetailsImageView"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:background="@color/whiteColorVentax" />

                </androidx.cardview.widget.CardView>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/titleDetailsTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|center"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="10dp"
                            android:text="Nombre del producto"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="35sp" />

                        <TextView
                            android:id="@+id/priceDetailsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="$99.99 MXN c/u"
                            android:textSize="25sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="30dp">

                        <TextView
                            android:id="@+id/idDetailsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:paddingBottom="4dp"
                            android:text="ID: " />

                        <TextView
                            android:id="@+id/detailsDetailsTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:maxLength="150"
                            android:text="Detalles del producto\n(0/150 caracteres)"
                            android:textAlignment="center"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/cancelDetailsButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:shadowColor="#000000"
                            android:shadowRadius="13"
                            android:text="Cancelar" />

                        <Button
                            android:id="@+id/orderDetailsButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:shadowColor="#000000"
                            android:shadowRadius="10"
                            android:text="Ordenar" />

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>


        </LinearLayout>



</LinearLayout>


