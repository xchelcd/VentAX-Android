<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/style_popup"
    android:orientation="vertical"
    android:layout_margin="15dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:background="@color/whiteColorVentax"
        android:id="@+id/pageTutorialLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTutorialTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:padding="5dp"
            android:text="Bienvenido a VentAX"
            android:textAlignment="center"
            android:textColor="@color/blackColorVentax"
            android:textSize="30sp"
            android:textStyle="italic|bold" />

        <ImageView
            android:id="@+id/coverTutorialImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/style_popup"
            android:src="@drawable/ventax_logo" />

        <TextView
            android:id="@+id/textTutorialTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/style_dialog_information"
            android:fontFamily="monospace"
            android:padding="5dp"
            android:textColor="@color/blackColorVentax"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/extraTextTutorialTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:textAlignment="center"
            android:textColor="@color/blackColorVentax"
            android:textSize="12sp" />

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/tutorialLinearLayout"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>