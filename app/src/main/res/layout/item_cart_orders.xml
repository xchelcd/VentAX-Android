<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="5dp">

    <EditText
        android:layout_width="wrap_content"
        android:textColor="@color/blackColorVentax"
        android:textSize="10sp"
        android:maxWidth="25dp"
        android:minWidth="20dp"
        android:visibility="gone"
        android:gravity="center"
        android:id="@+id/qtyEditText"
        android:background="@drawable/style_custom_selected_edittext"
        android:inputType="number"
        android:digits="0123456789"
        android:textStyle="italic"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/productNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.75"
        android:textColor="@color/blackColorVentax"
        android:textSize="15sp"
        android:textStyle="italic" />


    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textColor="@color/blackColorVentax"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_margin="2dp"
            android:background="@drawable/style_dialog_information"
            app:tint="@color/fucsiaColorVentax"
            android:layout_weight="1"
            android:id="@+id/deleteProductImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_delete_forever_24" />

        <ImageView
            android:layout_margin="2dp"
            android:background="@drawable/style_dialog_information"
            android:layout_weight="1"
            android:id="@+id/editProductImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_edit_24"
            app:tint="@color/blueGrayColorVentax" />

    </LinearLayout>


</LinearLayout>