<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColorVentax"
    android:orientation="vertical"
    tools:context=".Activity.Order.OrderUActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/ic_baseline_arrow_back_ios_24" />



        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:fontFamily="monospace"
            android:padding="15dp"
            android:textAlignment="center"
            android:textColor="@color/blackColorVentax"
            android:textSize="27sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/style_dialog_information">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/orderURecyclereView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp" />
    </LinearLayout>


</LinearLayout>