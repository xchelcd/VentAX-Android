<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/whiteColorVentax"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragment.ShoppingCart.CartFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:drawableStart="@drawable/ic_baseline_vertical_split_24"
            android:drawablePadding="5dp"
            android:layout_gravity="start|center"
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:fontFamily="monospace"
            android:padding="15dp"
            android:text="@string/carrito_de_compras"
            android:textAlignment="center"
            android:textColor="@color/blackColorVentax"
            android:textSize="27sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/orderUImageView"
            android:padding="10dp"
            android:layout_gravity="end|center"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_shopping_bag_24"/>
    </FrameLayout>

    <TextView
        android:id="@+id/noRegisterTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AÃšN NO HAY REGISTROS"
        android:textColor="@color/grayColorVentax"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="italic"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:fontFamily="monospace"/>

    <LinearLayout
        android:background="@drawable/style_dialog_information"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/businessNameRecyclereView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>